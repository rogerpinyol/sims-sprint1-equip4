/* Simplified fallback CSS (removed Tailwind directives and @apply rules).
   Keeps minimal button/badge styles so UI colors work without a Tailwind build
   and avoids accidental duplicate/invalid directives that affected functionality. */

body {
    background-color: #f3f4f6; /* gray-100 */
    font-family: system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial, "Noto Sans", "Liberation Sans", sans-serif;
    margin: 0;
    color: #111827; /* gray-900 */
}

.container {
    max-width: 1120px;
    margin: 0 auto;
    padding: 1rem;
}

.btn {
    font-weight: 700;
    padding: 0.5rem 1rem;
    border-radius: 0.375rem;
    transition: background-color .15s ease;
    cursor: pointer;
    display: inline-block;
}

.btn-blue { background-color: #2563eb; color: #ffffff; border: none; }
.btn-blue:hover { background-color: #1d4ed8; }
.btn-red  { background-color: #dc2626; color: #ffffff; border: none; }
.btn-red:hover { background-color: #b91c1c; }
.btn-green { background-color: #ea580c; color: #ffffff; border: none; }

.badge {
    display: inline-block;
    padding: .25rem .75rem;
    border-radius: 9999px;
    font-size: .75rem;
    font-weight: 700;
    color: #ffffff;
}

.badge-available  { background-color: #16a34a; }
.badge-charging   { background-color: #fef08a; color: #111827; }
.badge-booked     { background-color: #4f46e5; }
.badge-maintenance{ background-color: #f97316; }
.badge-offline    { background-color: #dc2626; }

.table th {
    background-color: #f9fafb; /* gray-50 */
    text-align: left;
    font-weight: 600;
    color: #374151; /* gray-700 */
    padding: .5rem;
}

.table tr:hover { background-color: #f3f4f6; }

/* small modifier for compact buttons */
.btn-xs { padding: .25rem .5rem; font-size: .75rem; }
